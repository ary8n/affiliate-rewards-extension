{
  "manifest_version": 3,
  "name": "Affiliate Rewards Helper",
  "version": "0.2.0",
  "description": "Automatically detects affiliate opportunities and tracks reward points.",
  "permissions": ["storage", "tabs", "scripting", "contextMenus"],
  "host_permissions": [
    "*://www.amazon.*/*",
    "*://amazon.*/*",
    "*://www.flipkart.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.amazon.*/*",
        "*://amazon.*/*",
        "*://www.flipkart.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Affiliate Rewards",
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
