{
  "manifest_version": 3,
  "name": "Affiliate Rewards Helper",
  "version": "0.3.1",
  "description": "Automatically detects affiliate opportunities and tracks reward points.",
  "permissions": ["storage", "tabs", "scripting", "contextMenus"],
  "web_accessible_resources": [
    {
      "resources": ["analytics.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "host_permissions": [
    "https://www.amazon.com/*",
    "https://www.amazon.in/*",
    "https://www.amazon.co.uk/*",
    "https://www.amazon.de/*",
    "https://amazon.com/*",
    "https://amazon.in/*",
    "https://amazon.co.uk/*",
    "https://amazon.de/*",
    "https://www.flipkart.com/*"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.amazon.com/*",
        "https://www.amazon.in/*",
        "https://www.amazon.co.uk/*",
        "https://www.amazon.de/*",
        "https://amazon.com/*",
        "https://amazon.in/*",
        "https://amazon.co.uk/*",
        "https://amazon.de/*",
        "https://www.flipkart.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Affiliate Rewards",
    "default_popup": "popup.html"
  },
  "options_page": "options.html"
}
